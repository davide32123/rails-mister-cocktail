<div class="landing">
   <h1 class ="text-center big-text" >What do you fancy today?</h1>
   <form class="form-inline my-2 my-lg-0">
    <input class="form-control mr-sm-2" name="query" type="search" placeholder= "Search" aria-label="Search" value= "<%= @query %>">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
  </form>
</div>
<div class="container">
  <div class="card-container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="vertical-card" data-aos="fade-up">
          <%= link_to (cl_image_tag cocktail.photo.key, height: 400, width: 250, crop: :fill, class: "vertical-card-img"), cocktail_path(cocktail) %>
          <%= link_to cocktail.name, cocktail_path(cocktail), class: "image-text" %>
          <p class ="text-center"> <%= "⭐️" * (cocktail.reviews.average(:rating) || 0) %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
